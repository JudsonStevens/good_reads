<h1><%= @book.title %></h1>

<h1>Average Rating</h1>

<%= @book.average_rating %>

<h2>Highest Rating</h2>

<p>
  <%= @book.highest_rating %>
  <%= @book.highest_rating_review.content %>
  <%= @book.highest_rating_review.user.name %>
</p>

<h1>Lowest Rating</h1>

<%= @book.lowest_rating %>


<% @reviews.each do |review| %>
  <%= review.content %>
  <%= review.rating %>
  <%= review.user.name %>
<% end %>

